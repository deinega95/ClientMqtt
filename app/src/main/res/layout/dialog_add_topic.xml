<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <TextView
            android:id="@+id/addTopic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/main_text_dark"
            android:text="@string/new_topic"
            android:fontFamily="sans-serif-medium"
            android:layout_marginRight="16dp"
            android:gravity="center"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_marginBottom="25dp"
            android:background="@drawable/background_with_bottom_line"
    />

    <EditText
            android:id="@+id/topicET"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/main_text_dark"
            android:textSize="14sp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
    />

    <Button
            android:id="@+id/subscribe"
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/add_topic"
            android:textSize="14sp"
            android:textColor="@color/main_text_light"
            android:background="@color/tab_active"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:textAllCaps="false"
    />

</LinearLayout>